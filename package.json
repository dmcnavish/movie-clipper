{
  "name": "movie-clipper",
  "version": "1.0.0",
  "description": "Programmatically generate TikTok-friendly movie clips",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "start": "node index.js movies.json",
    "download": "node index.js --action=download-movie",
    "clip": "node index.js --action=clip-movie",
    "all": "node index.js --action=all",
    "clip:mock": "node index.js --action=clip-movie --mock --max-scenes=2 --scale=360x640 --no-subs",
    "all:mock": "node index.js --action=all --mock --max-scenes=2 --scale=360x640 --no-subs"
  },
  "dependencies": {
    "axios": "^1.6.8",
    "better-sqlite3": "^11.10.0",
    "cli-progress": "^3.12.0",
    "dotenv": "^16.5.0",
    "fluent-ffmpeg": "^2.1.2",
    "minimist": "^1.2.8",
    "qbittorrent": "^1.0.0"
  }
}
